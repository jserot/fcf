type ('a,'b) option =
    None
  | Single of 'a
  | Pair of 'a * 'b
;

let silly (a:(int,int) option) = 
  let f (x) =
  | x~None -> return 0 
  | x~Single 0 -> f (None)
  | x~Single n -> f (Single (n-1))
  | x~Pair (m,0) -> f (Single m)
  | x~Pair (m,n) -> f (Pair (m,n-1)) in
  f (a)
;

silly(Pair (2,3));
